<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140sp"
    android:layout_marginBottom="5sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5sp"
    app:cardElevation="0sp"
    app:contentPadding="5sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/pdfRl"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_marginEnd="5dp"
            android:background="@color/purple_500">

            <!--PDF View-->
            <com.github.barteksc.pdfviewer.PDFView
                android:id="@+id/pdfView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <!--Progressbar: show while pdf is loading-->
            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <!--title-->
        <TextView
            android:id="@+id/titleTv"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pdfRl"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/removeFavBtn"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:text="Festival Name"/>

        <ImageButton
            android:id="@+id/removeFavBtn"
            android:layout_width="56dp"
            android:layout_height="51dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/ic_favorite_filled_red"
            app:tint="@color/black"
            android:contentDescription="@string/removefavorite"/>

        <!--Description-->
        <TextView
            android:id="@+id/descriptionTv"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTv"
            android:layout_toEndOf="@id/pdfRl"
            android:layout_toStartOf="@+id/removeFavBtn"
            android:maxLines="4"
            android:text="The festival info in max 4 lines."
            android:ellipsize="end"/>

        <!--Ending time-->
        <TextView
            android:id="@+id/dateendTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="DD/MM/YYYY"
            android:maxLines="1"/>

        <!--Size of pdf-->
        <TextView
            android:id="@+id/townTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/pdfRl"
            android:maxLines="1"
            android:text="@string/oulu"/>

        <!--Start date Added-->
        <TextView
            android:id="@+id/datestartTv"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/MM/yyyy"
            android:maxLines="1"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/townTv"
            android:textAlignment="center"
            android:layout_toStartOf="@id/dateendTv"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>